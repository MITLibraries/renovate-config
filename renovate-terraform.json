{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>MITLibraries/renovate-config"
  ],
  "baseBranches": [
    "dev"
  ],
  "pre-commit": {
    "enabled": true,
    "automerge": false,
    "labels": ["dependencies", "pre-commit"],
    "semanticCommits": "enabled"
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "hashicorp/aws"
      ],
      "allowedVersions": "<6.0"
    },
    {
      "matchPackageNames": [
        "hashicorp/terraform"
      ],
      "allowedVersions": "<=1.12.0"
    },
    {
      "matchPackageNames": [
        "/terraform-aws-modules/"
      ],
      "groupName": "terraform-aws-modules"
    },
    {
      "matchManagers": [
        "pre-commit"
      ],
      "groupName": "pre-commit"
    }
  ]
}
